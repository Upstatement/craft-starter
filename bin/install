#!/bin/bash

set -e

create_containers() {
  docker-compose up -d
}

wait_for_containers() {
  amount=${1:-5}
  sleep $amount
}

composer_install() {
  docker-compose exec craft composer install
}

copy_dotenv() {
  if [ -f .env ]; then
    echo "Have .env file already! Woo!"
  else
    echo "Missing .env file! Copying .env.example to .env..."
    cp .env.example .env
  fi
}

setup_secure_key() {
  docker-compose exec craft ./craft setup/security-key
}

install_static_deps() {
  npm install
}

build_static() {
  npm run build:vendor && npm run build
}


echo "Bringing up project containers..."
echo
create_containers
echo

echo "Waiting for containers to finish starting..."
wait_for_containers

echo "Running composer install..."
echo
composer_install
echo

echo
copy_dotenv
echo

echo "Setting up Craft secure key..."
echo
setup_secure_key
echo

echo "Installing static deps..."
echo
install_static_deps
echo

echo "Building static assets..."
echo
build_static
echo

echo "-------------------------------"
echo "Install completed successfully!"
echo "-------------------------------"
echo
echo "Run './bin/start' and get to work!"
echo
